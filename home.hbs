{{!< default}}
<header id=header>
  <div id=header-content>

      <!-- <img id=logo src="{{@blog.logo}}" alt="{{@blog.title}}" /> -->
      <!-- <object id=logo type="image/svg+xml" data="{{@blog.logo}}"></object> -->
      <nav class=nav>
        <ul>

          <span id=logotexto>P I N E</span>
          <object id=logo type="image/svg+xml" data="{{@blog.logo}}"></object>
          <li><a class=scroll-down data-offset=0 href="#header">Home</a><span class=predio>&nbsp;</span></li>
          {{#foreach posts}}
          <li><a class=scroll-down data-offset=-60 href="#anchor-{{@index}}">{{title}}</a><span class=predio>&nbsp;</span></li>
          {{/foreach}}
        </ul>
      </nav>

      <div id="header-container">
        <h1 id="header-title">PINE SIGNIFICA: <span></span></h1>
      </div>
  </div>
</header>

<div class="pages">
  {{#foreach posts}}
    <div id=anchor-{{@index}} class="anchor">
      <div class="{{post_class}}" >
        <h2 class="post-title">{{title}}</h2>
        {{content}}
      </div>
    </div>
{{/foreach}}
</div>
